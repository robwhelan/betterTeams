$('#controlDiv,#taskStatements').removeClass('hidden');

var i=0;
<% @discs.each do |d| %>
	$('#disc_' + i).html('<%= d.name %>').attr('id', '#disc_' + '<%= d.id %>');
	$('#d' + i).val('<%= d.id %>');
	i++;
<% end %>
		
var i=2;
<% @non_discs.each do |d| %>
	$('#disc_' + i).html('<%= d.name %>').attr('id', '#disc_' + '<%= d.id %>');
	i++;
<% end %>

