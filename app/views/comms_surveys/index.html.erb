<h1>Listing comms_surveys</h1>

<table>
  <thead>
    <tr>
      <th>Improvement plan</th>
      <th>Name</th>
      <th>Email</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comms_surveys.each do |comms_survey| %>
      <tr>
        <td><%= comms_survey.improvement_plan %></td>
        <td><%= comms_survey.name %></td>
        <td><%= comms_survey.email %></td>
        <td><%= comms_survey.user %></td>
        <td><%= link_to 'Show', comms_survey %></td>
        <td><%= link_to 'Edit', edit_comms_survey_path(comms_survey) %></td>
        <td><%= link_to 'Destroy', comms_survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

