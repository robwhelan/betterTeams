<div class="container">
	<h1 id="questionText">Which would you read first?</h1>
	<div class="row">
		<div class="col-md-6"></div>
		<div class="col-md-6">
			<p id="ratingTop">Read This First</p>
		</div>
	</div>
		
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-5">
			<ul id="sortable_1" class="list-unstyled connectedSortable">
				<li id="starting_1" class="ui-state-default btn btn-default btn-lg btn-block"></li>
				<li id="starting_2" class="ui-state-default btn btn-default btn-lg btn-block"></li>
				<li id="starting_3" class="ui-state-default btn btn-default btn-lg btn-block"></li>
				<li id="starting_4" class="ui-state-default btn btn-default btn-lg btn-block"></li>
				<li id="starting_5" class="ui-state-default btn btn-default btn-lg btn-block"></li>
				<li id="starting_6" class="ui-state-default btn btn-default btn-lg btn-block"></li>
			</ul>
		</div>
		<div class="col-md-5">
			<ul id="sortable_2" class="list-unstyled connectedSortable" style="height:300px;background-color:#EDF1FF;">
			</ul>
			<p id="ratingBottom">Read This Last</p>
			<button class="btn btn-primary btn-lg btn-block" disabled="disabled" id="nextButton">Next</button>
		</div>
		<div class="col-md-1"></div>
	</div>
	<div class="row" style="height:100px;">
	</div>
	<div class="row">
		<div class="progress">
			<div class="progress-bar progress-bar-success" id="progressBar" role="progressbar" aria-valuenow="6.66" aria-valuemin="0" aria-valuemax="100" style="width: 6.66%;">
			</div>
		</div>
	</div>
</div>

<p class="hidden" id="questionNumber">1</p>		

<%= form_for(@value_assessment) do |f| %>
  <% if @value_assessment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@value_assessment.errors.count, "error") %> prohibited this value_assessment from being saved:</h2>

      <ul>
      <% @value_assessment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :aesthetic_score %><br>
    <%= f.number_field :aesthetic_score, value: 0 %>
  </div>
  <div class="field">
    <%= f.label :individualistic_score %><br>
    <%= f.number_field :individualistic_score, value: 0 %>
  </div>
  <div class="field">
    <%= f.label :social_score %><br>
    <%= f.number_field :social_score, value: 0 %>
  </div>
  <div class="field">
    <%= f.label :theoretical_score %><br>
    <%= f.number_field :theoretical_score, value: 0 %>
  </div>
  <div class="field">
    <%= f.label :traditional_score %><br>
    <%= f.number_field :traditional_score, value: 0 %>
  </div>
  <div class="field">
    <%= f.label :utilitarian_score %><br>
    <%= f.number_field :utilitarian_score, value: 0 %>
  </div>
  <div class="actions">
	    <%= f.submit id: "submitButton" %>
  </div>
<% end %>
